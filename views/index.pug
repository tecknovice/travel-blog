extends layout/base.pug

block stylesheets
  link(rel="stylesheet" href="/stylesheets/index.css")

block cover
  img(src=image_path+"1566190503470-travel.jpg" alt="cover image")

block content
  section.about-me.container.mt-5
    .row
      .col-md-4
        .d-flex.flex-column
          .image-container.rounded
            .image-cover
            img.rounded(src="/images/avatar.jpg" alt="avatar")
          .d-flex.justify-content-around.mt-3
            a(href="#")
              i.fa.fa-facebook-f
            a(href="#")
              i.fa.fa-instagram
            a(href="#")
              i.fa.fa-twitter
            a(href="#")
              i.fa.fa-youtube-play
      .col-md-8.mt-4.mt-md-0
        .d-flex.flex-column
          h1.text-center.text-md-left
            a(href="#") About me
          .text-justify.overflow-hidden(style="height: 15rem;")
            | Hi, I’m Hung, the founder of this website! Have you ever thought to your self one of the
            | following:
            ul(style="margin: 0;")
              li “How do I find the money to travel? It seems too expensive for me.”
              li “Where do I find the best travel deals?”
              li “How do I save money on flights, accommodation, and other big expenses?”
              li “How do I plan my trip?”
              li “How do I stay safe and healthy?”
              li “How do I maximize my time?”
              li “I want to travel more but I don’t know the first step.”
            |                         You are not alone. I am here to help you answer those
            |                         questions and travel more with tested and proven tips and advice. This way, you can spend less
            |                         time searching the Internet and being overwhelmed with information and more time doing the one
            |                         thing you want to do: travel more.
  section.stats.d-flex.align-items-center.text-white.mt-5
    .container
      .row
        .col-md-4
          .stat.d-flex.flex-column.align-items-center
            .display-4 5
            div destinations
        .col-md-4.my-3.my-md-0
          .stat.d-flex.flex-column.align-items-center
            .display-4=totalPost
            div posts
        .col-md-4
          .stat.d-flex.flex-column.align-items-center
            .display-4=totalImage
            div images & videos
  if(topPosts)
    section.top-posts.container.mt-5
      h1.text-center Top posts
      .position-relative.mt-4
        #controls-container.controls-container
          button.btn.bg-white.border-0.prev-button.d-flex.align-items-center.justify-content-center.rounded-circle
            i.fa.fa-chevron-left
          button.btn.bg-white.border-0.next-button.d-flex.align-items-center.justify-content-center.rounded-circle
            i.fa.fa-chevron-right
        .slider
          each post in topPosts
            div
              .card
                .image-container.card-img-top
                  img(src=(post.image!=undefined?image_path+post.image.name:image_path+'default-post.jpg') alt="post cover image")
                  .image-cover
                .card-body
                  .d-flex.align-items-center
                    i.fa.fa-tag.mr-3
                    span
                      each tag in post.tags
                        a(href=`/tag/${tag.slug}`)=tag.name
                        |&nbsp;
                  h4.my-2.overflow-hidden
                    a.text-nowrap(href=`/post/${post.slug}`)=post.title
                  div=post.publishedTime
                  p.overflow-hidden.text-justify.mt-3(style="height: 4.5rem;")
                    |!{post.description}
  if(latestPosts)
    section.latest-posts.container.mt-5
      h1.text-center Lastest posts
      .row#latest-posts
        each post in latestPosts
          .col-sm-6.col-lg-4.mt-4
            .card
              .image-container.card-img-top
                img(src=(post.image!=undefined?image_path+post.image.name:image_path+'default-post.jpg') alt="post cover image")
                .image-cover
              .card-body
                .d-flex.align-items-center
                  i.fa.fa-tag.mr-3
                  span
                    each tag in post.tags
                      a(href=`/tag/${tag.slug}`)=tag.name
                      |&nbsp;
                h4.my-2.overflow-hidden
                  a.text-nowrap(href=`/post/${post.slug}`)=post.title
                div=post.publishedTime
                p.overflow-hidden.text-justify.mt-3(style="height: 4.5rem;")
                  |!{post.description}
      .row.mt-4
        .col-sm-6.offset-sm-3.col-lg-4.offset-lg-4
          button#load-post.btn.w-100.d-flex.align-items-center.justify-content-center.text-white.bg-dark.py-3(type="button")
            | Load more

block javascripts
  script(src="/javascripts/image.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.1/min/tiny-slider.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js")
  // load blueimp template engine
  script(src='https://cdnjs.cloudflare.com/ajax/libs/blueimp-JavaScript-Templates/3.12.0/js/tmpl.min.js')
  script#tmpl-definition(type='text/x-tmpl').
    {% for (var i=0; i<o.length; i++) { %}
      <div class="col-sm-6 col-lg-4 mt-4">
        <div class="card">
            <div class="image-container card-img-top"><img src="https://admin.thesologuy.tk/images/{%=o[i].image?o[i].image.name:'default-post.jpg'%}" alt="post cover image" class="wide">
                <div class="image-cover"></div>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center">
                  <i class="fa fa-tag mr-3"></i>
                  <span>
                    {% for (var j=0; j<o[i].tags.length; j++) { %}
                      <a href="/tag/{%=o[i].tags[j].slug%}">{%=o[i].tags[j].name%}</a>&nbsp;
                    {% } %}
                  </span>
                </div>
                <h4 class="my-2 overflow-hidden"><a class="text-nowrap" href="/post/{%=o[i].slug%}">{%=o[i].title%}</a></h4>
                <div>{%=o[i].publishedTime%}</div>
                <p class="overflow-hidden text-justify mt-3" style="height: 4.5rem;">
                  {%#o[i].description%}
                </p>
            </div>
        </div>
      </div>
    {% } %}
  script.
    const slider = tns({
      items: 1,
      nav: false,
      autoplay: false,
      controlsContainer: document.getElementById('controls-container'),
      responsive: {
          576: {
              gutter: 30,
              items: 2
          },
          992: {
              items: 3
          }
      }
    })
    $(function() {
      let skip = 6
      $('#load-post').click(function(event){
        $('#load-post').text('Loading..')
        $.get( `/post/load?skip=${skip}`, function( data ) {
          console.log(data)
          skip += data.length
          $('#latest-posts').append(tmpl('tmpl-definition', data))
        })
        .always(function() {
          $('#load-post').text('Load more')
        });
      })
    })
