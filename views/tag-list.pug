extends layout/base.pug

block stylesheets
  link(rel="stylesheet" href="/stylesheets/index.css")

block cover
  img(src=image_path+"1566207328543-tags.jpg" alt="cover image")

block content
  section.tags.container.mt-5.text-white
    if(tags)
      .row
        each tag in tags
          .col-sm-6.col-lg-4.mt-4
            .card
              a.text-center.text-white(href="/tag/"+tag.slug)
                .image-container
                  img(src=(tag.image!=undefined?image_path+tag.image.name:image_path+"1566207328543-tags.jpg") alt="tag cover image")
                  .image-cover
                .position-absolute.w-100.p-3(style="bottom: 0;")
                  h1.overflow-hidden(style="white-space:nowrap;")=tag.name
                  .mt-2=tag.postCount+' posts'
      .row.mt-4
        .col-sm-6.offset-sm-3.col-lg-4.offset-lg-4
          button.btn.w-100.d-flex.align-items-center.justify-content-center.text-white.bg-dark.py-3(type="button")
            | Load more

block javascripts
  script(src="/javascripts/image.js")